<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_rounded_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_rounded_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonBordered" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_border_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonLink" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="InputWrapper" parent="CardView.Light">
        <item name="cardCornerRadius">32dp</item>
        <item name="android:background">@color/white</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPaddingBottom">20dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingLeft">24dp</item>
        <item name="contentPaddingRight">24dp</item>
    </style>


</resources>
